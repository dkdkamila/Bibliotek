@model IEnumerable<Library.Models.Book>
@{
    ViewData["Title"] = "Resultat";
}

<h2>Resultat</h2>

<p>
    <a asp-action="Index">Tillbaka till startsidan</a>
</p>

@if (Model.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th>Titel</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id">Visa mer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Inga resultat hittades</p>
}
