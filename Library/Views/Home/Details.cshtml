@model Library.Models.Book

<h2>Information om boken</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            Författare:
        </dt>
        <dd class="col-sm-10">
            @if (Model.BookAuthors != null && Model.BookAuthors.Any())
            {
                foreach (var bookAuthor in Model.BookAuthors)
                {
                    <div>@bookAuthor.Author?.Name</div>
                }
            }
            else
            {
                <span>No author specified</span>
            }
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2">
            Låntagarens namn:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowerName)
        </dd>

        <dt class="col-sm-2">
            Utlåningsdatum:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowedDate)
        </dd>

    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Tillbaka till startsidan</a>
    <br>
    @if (!Model.IsBorrowed())
    {
        <a asp-action="Borrow" asp-route-id="@Model.Id">Låna</a>
    }
</p>
